<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/container">

    <!--<TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#000"
        android:text="Модульная мультимедиа-игротека \n«Дети мира»"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25sp" />-->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <!--app:layout_constraintTop_toBottomOf="@+id/title_text">-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/fon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TT -->

            <TextView
                android:id="@+id/textViewTt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:shadowColor="#fff"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Тяни-толкай"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButtonTt"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="top|center"
                android:layout_margin="45dp"
                android:background="@drawable/tt"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <!-- MK -->

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewMk"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="90dp"
                android:gravity="center_horizontal"
                android:shadowColor="#fff"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Мульт-контакт"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButtonMk"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_margin="15dp"
                android:background="@drawable/mk"
                android:padding="5dp"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <!-- Center -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Piktograf -->

            <TextView
                android:id="@+id/textViewPikt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:shadowColor="#fff"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Пиктограф"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButtonPikt"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="top|center"
                android:layout_margin="45dp"
                android:background="@drawable/pikt"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <!-- Rechedrom -->

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewRech"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="90dp"
                android:gravity="center_horizontal"
                android:shadowColor="#fff"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Речедром"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButtonRech"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_margin="15dp"
                android:background="@drawable/rech"
                android:padding="5dp"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <!-- Right -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Pm -->

            <TextView
                android:id="@+id/textViewPm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:shadowColor="#fff"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Пойми меня"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButtonPm"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="top|center"
                android:layout_margin="45dp"
                android:background="@drawable/pm"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <!-- Rechedrom -->

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewGen"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="90dp"
                android:gravity="center_horizontal"
                android:shadowColor="#fff"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="Генератор историй"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButtonGen"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_margin="15dp"
                android:background="@drawable/gen"
                android:padding="5dp"
                android:scaleType="fitCenter" />

        </FrameLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>